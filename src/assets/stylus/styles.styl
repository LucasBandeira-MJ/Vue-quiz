.quiz
    width 100%
    max-width 800px
    margin auto
    display flex
    flex-direction column

    .question
        margin 40px 0
        p
            width 100%
            color #7214a1
            font-size 1.1rem
            font-weight 300
            line-height 24px
            text-align left
            padding 5px
        button
            width 40%
            display inline-block
            padding 15px 0
            border 1px solid lightgrey
            font-size 18px
            margin 0 10px
            text-decoration: none
            background #fff
            cursor pointer
            transition background 0.5s ease
            &:hover
                background #f5f5f5
            
    .answer
        margin 40px 15px
        padding 40px 0
        position relative
        display none

        &:before
            content ''
            display:inline-block
            width 20px
            height 20px
            border 1px solid #99cc34
            background #fff
            border-right none
            border-bottom none
            position absolute
            top -11px
            transform rotate(45deg)
            left 20%

        p
            text-align center
            color #000
            margin 5px 0
        
        .response_message
            font-size 1.4rem

        .response_message--sub
            font-size 1.2rem
        
        .response_answer
            font-size 0.9rem
            font-weight light
            color #666
            
    .visible
        display: inline-block

    .right
        .answer
            border 1px solid #99cc34
        .glow
            background #99cc34
            color white

    
    .wrong
        .answer
            border 1px solid #ff2e54
            &:before
                border 1px solid #ff2e54
                border-bottom none
                border-right none
                
        .glow
            background #ff2e54
            color white
        img
            content url('./assets/img/erro.svg')

